@page
@model Computer_Craft.Pages.RepairModel
@{
    ViewData["Title"] = "Laptop Repair Appointment";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laptop Repair Appointment</title>
    <link href="~/css/repair.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <style>
        /* General styling for form inputs */
        .form-control {
            border-radius: 0; /* Sharp borders */
            border: 1px solid #007bff !important; /* Border color */
            box-shadow: none; /* Remove default shadow */
        }

            .form-control:focus {
                border-color: #007bff !important; /* Border color on focus */
                box-shadow: none; /* Remove default shadow */
            }

        /* Styling for the submit button */
        .btn-primary {
            border-radius: 0; /* Sharp corners (rectangle) */
            background-color: #007bff; /* Button background color */
            border-color: #007bff; /* Button border color */
            color: white; /* Button text color */
            font-weight: bold; /* Make text bold */
        }

            .btn-primary:hover {
                background-color: whitesmoke; /* Background color on hover */
                color: #007bff; /* Text color on hover */
                border-color: var(--bs-dark); /* Border color on hover */
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <p class="text-muted text-center">
            <a class="text-muted" href="/Index">Home</a> / Laptop Repair Appointment
        </p>
        <h2 class="text-center" style="font-family:'Karla'"> <i class="fab fa-whatsapp"></i> Schedule Repair Appointment via Whatsapp</h2>
        <form id="repairForm">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter Your Name" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Enter Your Phone Number" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter Your Email" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="fixDescription">Fix Description</label>
                    <textarea class="form-control" id="fixDescription" name="fixDescription" rows="1" placeholder="Describe the issue with your laptop" required></textarea>
                </div>
            </div>
            <button type="button" class="btn btn-primary btn-block" onclick="sendToWhatsapp()">Send</button>
        </form>
    </div>
    <script>
        function sendToWhatsapp() {
            let number = "+96176906107";
            let name = document.getElementById('name').value;
            let phoneNumber = document.getElementById('phoneNumber').value;
            let email = document.getElementById('email').value;
            let fixDescription = document.getElementById('fixDescription').value;
            let message = encodeURIComponent(
                "Name: " + name + "\n" +
                "Phone Number: " + phoneNumber + "\n" +
                "Email: " + email + "\n" +
                "Fix Description: " + fixDescription
            );

            var url = "https://wa.me/" + number + "?text=" + message;

            window.location.href = url;
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
