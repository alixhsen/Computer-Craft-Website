@page
@model Computer_Craft.Pages.NetworksModel
@{
    ViewData["Title"] = "Network Parts";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        .card {
            margin-bottom: 50px;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            transition: transform 0.2s, box-shadow 0.2s;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .card-img-top {
            height: 230px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            flex-grow: 1;
            width: 100%;
        }

        .card-body-content {
            flex-grow: 1;
        }

        .card a {
            color: inherit;
            text-decoration: none;
        }

        .btn-shop-now, .btn-details {
            border: 1px solid #007bff;
            background-color: white;
            color: #007bff;
            transition: background-color 0.2s, color 0.2s;
            margin-top: 10px;
            width: 100%;
        }

            .btn-shop-now:hover, .btn-details:hover {
                background-color: #007bff;
                color: white;
            }

        .product-code, .product-name, .product-features, .product-price {
            margin: 0;
        }

        .product-code {
            color: #6c757d;
        }

        .product-name {
            font-weight: bold;
            margin-top: 5px;
        }

        .product-features {
            color: #6c757d;
        }

        .product-price {
            color: #007bff;
            margin-top: 10px;
            font-weight: bold;
            text-align: center;
        }

        .fixed-height {
            height: 100px; /* Adjust this value based on your content */
        }

        .row-space {
            margin: 30px; /* Adjust the value as needed */
        }
    </style>
</head>
<body>

    <p class="text-muted text-start p-1">
        <a class="text-muted" href="/Index">Home</a> / Network Parts
    </p>
    <h1 class="text-start" style="font-family:'Karla'">Network Parts !</h1>
    <div class="container mt-5">
         <div class="row row-space">
            @foreach (var l in Model.NetworkList)
            {
                <div class="col-md-4 d-flex">
                    <div class="card">
                        <a href="/ProductDetails?id=@l.SerialNumber">

                            <img src="/Images/@l.Image" class="card-img-top" alt="Laptop 1">
                                <div class="card-body">
                                    <div class="card-body-content fixed-height">
                                        <p class="product-code">SKU: @l.SerialNumber</p>
                                 
                                        <p class="product-name">@l.Name</p>
                                    </div>
                                    <br />
                                    <hr />
                                    <p class="product-price">$ @l.Price</p>
                                    <div class="btn-group">
                                    <a href="/ProductDetails?id=@l.SerialNumber" class="btn btn-shop-now"><i class="fas fa-shopping-cart"></i> Buy Now</a>
                                    </div>
                                </div>
                        </a>
                    </div>
                </div>
            }
        </div> 
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
