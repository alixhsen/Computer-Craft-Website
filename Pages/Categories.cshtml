@page
@model Computer_Craft.Pages.CategoriesModel
@{
    ViewData["Title"] = "Categories";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <style>
        .card-icon {
            font-size: 3rem;
            color: #007bff;
            margin-bottom: 20px;
        }

        .card {
            text-align: center;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: scale(1.05);
            }

        a.card-link {
            text-decoration: none;
            color: inherit;
        }
        .card-title{
            font-family: 'karla';
            font-weight: bold;
        }
    </style>
</head>
<body>
    <p class="text-muted text-start p-1">
        <a class="text-muted" href="/Index">Home</a> / Categories
    </p>
    <h2 class="text-center" style="font-family: 'Karla';">Our Categories</h2>
    <div class="container p-5">
        <div class="row">
            <div class="col-md-4">
                <a href="/Laptops" class="card-link">
                    <div class="card mb-3">
                        <div class="card-body">
                            <i class="fas fa-laptop card-icon"></i>
                            <br />
                            <h3 class="card-title">Laptops</h3>
                            <p class="card-text">
                                Explore our range of powerful and portable laptops designed for every need, from professional tasks to gaming. Find the perfect laptop to boost your productivity and entertainment.
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Desktops" class="card-link">
                    <div class="card mb-3">
                        <div class="card-body">
                            <i class="fas fa-desktop card-icon"></i>
                            <br />
                            <h3 class="card-title">Desktops</h3>
                            <p class="card-text">
                                Find robust and reliable desktop computers tailored for both work and play. Our selection offers exceptional performance and customization options to meet all your computing needs.
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Networks" class="card-link">
                    <div class="card mb-3">
                        <div class="card-body">
                            <i class="fas fa-network-wired card-icon"></i>
                            <br />
                            <h3 class="card-title">Network</h3>
                            <p class="card-text">
                                Upgrade your connectivity with our top-quality network equipment. From routers to switches, we have everything you need to ensure fast, secure, and reliable network performance.
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Accessories" class="card-link">
                    <div class="card mb-3">
                        <div class="card-body">
                            <i class="fas fa-headphones card-icon"></i>
                            <br />
                            <h3 class="card-title">Accessories</h3>
                            <p class="card-text">
                                Enhance your tech experience with our wide range of accessories. From keyboards and mice to cables and chargers, find everything you need to complement your devices.
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Components" class="card-link">
                    <div class="card mb-3">
                        <div class="card-body">
                            <i class="fas fa-microchip card-icon"></i>
                            <br />
                            <h3 class="card-title">Components</h3>
                            <p class="card-text">
                                Build and upgrade your system with our high-quality components. From CPUs and GPUs to RAM and storage, find the essential parts to optimize your computer's performance.
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Security" class="card-link">
                    <div class="card mb-3">
                        <div class="card-body">
                            <i class="fas fa-fingerprint card-icon"></i>
                            <br />
                            <h3 class="card-title">Security</h3>
                            <p class="card-text">
                                Protect your devices and data with our reliable security parts. Explore our selection of cameras, locks, and other security solutions to keep your setup safe and secure.
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
