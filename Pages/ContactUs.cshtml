@page
@model Computer_Craft.Pages.ContactUsModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <link href="~/css/contact.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@200..800&family=Poppins:wght@100..900&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Karla', sans-serif;
        }
        .breadcrumb {
            background: none;
            padding: 0;
            margin-bottom: 2rem;
        }

            .breadcrumb a {
                color: #007bff;
                text-decoration: none;
            }

        .contact-section {
            padding: 2rem;
            background-color: #fff;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            margin: 15px;
        }

            .contact-section h2 {
                font-family: 'Poppins', sans-serif;
                font-weight: 700;
                font-size: 2rem;
                margin-bottom: 1.5rem;
                color: #007bff;
            }

        .contact-info,
        .opening-hours {
            padding: 1.5rem;
            background-color: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

            .contact-info h3,
            .opening-hours h3 {
                font-family: 'Poppins', sans-serif;
                font-weight: 600;
                font-size: 1.25rem;
                margin-bottom: 1rem;
                color: #333;
            }

            .contact-info p,
            .opening-hours p {
                margin: 0.5rem 0;
                display: flex;
                align-items: center;
                font-size: 1rem;
            }

            .contact-info i,
            .opening-hours i {
                margin-right: 10px;
                color: #007bff;
            }

        .social-media {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
        }

            .social-media a {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background-color: #007bff;
                color: #fff;
                text-decoration: none;
                margin: 0 10px;
                transition: background-color 0.3s, color 0.3s;
            }

                .social-media a:hover {
                    background-color: #0056b3;
                    color: #fff;
                }

        .map {
            height: 400px;
            width: 100%;
            border-radius: 8px;
            overflow: hidden;
        }
    </style>
</head>

<body>
    <div class="container">
        <nav aria-label="breadcrumb">
            <br />
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item"><a href="/Index" class="text-muted">Home</a></li>
                <li class="breadcrumb-item active text-muted" aria-current="page">Contact Us</li>
            </ol>
        </nav>
        <div class="contact-section">
            <h2 class="text-center">Don't hesitate to ask!</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="contact-info">
                        <h3>Address</h3>
                        <p><i class="fas fa-map-marker-alt"></i> Beirut, Beirut Governorate, Lebanon</p>
                    </div>
                    <div class="contact-info">
                        <h3>Contact Info</h3>
                        <p><i class="fas fa-phone"></i> +961 76 906 107</p>
                        <p><i class="fas fa-envelope"></i> contact@computercraft.com</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="opening-hours">
                        <h3>Opening Hours</h3>
                        <p><i class="fas fa-calendar-week"></i> <span class="text-danger">Mon - Fri:</span> 9:00 AM - 6:00 PM</p>
                        <p><i class="fas fa-calendar-day"></i> <span class="text-danger">Sat:</span> 10:00 AM - 4:00 PM</p>
                        <p><i class="fas fa-calendar-times"></i> <span class="text-danger">Sun: Closed</span></p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2766.313168957458!2d35.521773100000004!3d33.8278696!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151f19cb1de15c61%3A0x2328e0617975dd48!2sLebanese%20University%20-%20Hadat%20Campus!5e1!3m2!1sen!2slb!4v1722343668199!5m2!1sen!2slb" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
            <div class="social-media">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-whatsapp"></i></a>
            </div>
        </div>
    </div>
</body>

</html>
