    <style>
        /* General button styles */
        button {
            border: none;
            border-radius: 5px;
            padding: 8px 12px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
            margin: 2px;
        }


        .recent-products a {
            text-align: center;
            display: block;
            /* margin: 1rem auto; */
            /* color: var(--color-primary); */
        }

        .btn {
            border: none;
            border-radius: 5px;
            padding: 8px 12px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
            margin: 2px;
        }

        .btn-update {
            background-color: #007bff;
            color: white;
        }

            .btn-update:hover {
                background-color: #0056b3;
            }

        /* UnPaid button styles */
        .btn-unpaid {
            background-color: #dc3545;
            color: white;
        }

