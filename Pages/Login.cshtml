@page
@model LoginModel
@{
    ViewData["Title"] = "Customer Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/css/login.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .box-area {
            max-width: 930px;
            border-radius: 30px;
            overflow: hidden;
        }

        .left-box {
            background: #103cbe;
            color: #fff;
            text-align: center;
            padding: 30px;
            border-radius: 30px 0 0 30px;
        }

        .left-box img {
            width: 220px;
            margin-bottom: 20px;
        }

        .left-box p {
            font-size: 2rem;
            font-weight: 600;
        }

        .left-box small {
            display: block;
            font-size: 1rem;
        }

        .right-box {
            background: #fff;
            padding: 30px;
            border-radius: 0 30px 30px 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .right-box h2 {
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .right-box p {
            font-size: 1rem;
            margin-bottom: 10px;
        }

        .input-group input {
            border-radius: 20px;
            font-size: 1rem;
        }

        .input-group .form-control::placeholder {
            font-size: 1rem;
        }

        .input-group .btn {
            border-radius: 20px;
            font-size: 1rem;
        }

        .btn-primary {
            background: #007bff;
            border: none;
        }

        .btn-light {
            background: #f8f9fa;
            border: none;
        }

        .btn-light img {
            vertical-align: middle;
        }

        .forgot a {
            color: #007bff;
        }

        .forgot a:hover {
            text-decoration: underline;
        }

        media (max-width: 768px) {
            .box-area {
                width: 100%;
                border-radius: 15px;
            }

            .left-box {
                border-radius: 15px 15px 0 0;
            }

            .right-box {
                border-radius: 0 0 15px 15px;
            }
        }
    </style>
</head>
<body data-message-type="@Model.MessageType" data-message-text="@Model.MessageText">
    <div class="container mt-5 d-flex flex-column align-items-center">
        <p class="text-muted text-center">
            <a class="text-muted" href="/Index">Home</a> / Login
        </p>
        <!----------------------- Main Container -------------------------->
        <div class="container d-flex justify-content-center align-items-center">
            <!----------------------- Login Container -------------------------->
            <div class="row border box-area">
                <!--------------------------- Left Box ----------------------------->
                <div class="col-md-6 left-box">
                    <div class="featured-image mb-3">
                        <img src="~/Images/Logo/1.png" class="img-fluid">
                    </div>
                    <p>Be Verified</p>
                    <small>Access your account to explore the latest tech and deals.</small>
                </div>
                <!--------------------------- Right Box ---------------------------->
                <div class="col-md-6 right-box">
                    <form method="post">
                        <div class="row align-items-center">
                            <div class="header-text mb-4">
                                <h2>Hello!</h2>
                                <p>We are happy to have you back.</p>
                            </div>
                            <div class="input-group mb-3">
                                <input type="text" id="username" class="form-control form-control-lg bg-light" placeholder="Username" name="username" required>
                            </div>
                            <div class="input-group mb-3">
                                <input type="password" id="password" class="form-control form-control-lg bg-light" placeholder="Password" name="password" required>
                                <div class="input-group-append">
                                    <span id="togglePassword" class="input-group-text"><i class="fas fa-eye-slash"></i></span>
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <button type="submit" class="btn btn-primary w-100">Login</button>
                            </div>
                            <div class="row">
                                <small>Don't have an account? <a href="/Register">Sign Up</a></small>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/loginscript.js"></script>
</body>
</html>
